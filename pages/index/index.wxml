<!--pages/index/index.wxml-->
<button bindtap="showPicker_01">单列非联动picker</button>
<view>选择数据：{{picker_01_data}}</view>
<view>选择索引：{{picker_01_index}}</view>
<picker
	isShowPicker="{{isShow_01}}"
	bindsure="sureCallBack_01"
	bindcancle="cancleCallBack_01"
	scrollType="normal"
	listData="{{listData_01}}"
	indicatorStyle="height:47px"
></picker>

